{
  "compilerOptions": {
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate declaration files
    "declarationDir": "./dist" // Output directory for declaration files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}